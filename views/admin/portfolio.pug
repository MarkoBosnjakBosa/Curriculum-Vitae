doctype html
html
  head
    title Portfolio
    meta(name="description", content="Curriculum Vitae")
    meta(name="author", content="Marko Bo≈°njak")
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href=url + "/images/fav/favicon.ico", rel="icon", type="image/x-icon")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.10.2/css/all.css")
    link(rel="stylesheet", href="../../css/admin/portfolio.css")
    script(src="https://code.jquery.com/jquery-3.4.1.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    script(src="../../handlers/admin/portfolioHandlers.js")
  body
    div#wrapper.d-flex
      div#sidebar-wrapper.bg-light.border-right
        div.sidebar-heading Administration
        div.list-group.list-group-flush
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/profile") Profile
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/resume") Resume
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/skills") Skills
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/portfolio") Portfolio
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/contact") Contact
      div#page-content-wrapper
        nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom
          button#menu-toggle.btn.btn-secondary
            i.fas.fa-angle-double-left
          button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          div#navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.ml-auto.mt-2.mt-lg-0
              li.nav-item.dropdown
                a#username.nav-link.active.dropdown-toggle(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") #{username}
                div.dropdown-menu.dropdown-menu-right(aria-labelledby="navbarDropdown")
                  a.dropdown-item.profileLink(href=url + "/admin/profile") Profile
                  a.dropdown-item.changePasswordLink(href=url + "/admin/change/password") Change password
                  a.dropdown-item.logOutLink(href="#") Log out
        div.container-fluid
          div#portfolioErrorMessage.alert.alert-danger.alert-dismissible.fade.show
            strong
            button#hidePortfolioErrorMessage.close(type="button")
              span(aria-hidden="true") &times;
          div#portfolioSuccessMessage.alert.alert-success.alert-dismissible.fade.show
            strong
            button#hidePortfolioSuccessMessage.close(type="button")
              span(aria-hidden="true") &times;
          div.portfolioTitle
              h1 Portfolio
          form#createPortfolioForm(method="POST", enctype="multipart/form-data", autocomplete="off")
            div.form-row
              div.form-group.col-md-2
                select#type.form-control
                  option(value="") Type
                  option(value="jiraServer") Jira Server
                  option(value="jiraCloud") Jira Cloud
                  option(value="personalProject") Personal Project
                  option(value="masterThesis") Master Thesis
              div.form-group.col-md-3
                input#name.form-control(type="text", name="name", placeholder="Name")
              div.form-group.col-md-3
                input#link.form-control(type="url", name="link", placeholder="Link")
              div.form-group.col-md-2
                input#logo.inputFile(type="file", name="logo")
                label(for="logo")
                  i.fas.fa-upload
                  span#logoName(style="margin-left: 5px") Choose a logo
              div.form-group.col-md-2
                button.btn.btn-primary(type="submit") Submit
          div#portfolioDiv
    div#editPortfolioModal.modal.fade(tabindex="-1", role="dialog", aria-hidden="true")
      form#editPortfolioForm(method="POST", autocomplete="off")
        div.modal-dialog.modal-dialog-centered(role="document")
          div.modal-content
            div.modal-header
              h5.modal-title Edit portfolio
              button.close(type="button", data-dismiss="modal", aria-label="Close")
                span(aria-hidden="true") &times
            div.modal-body
              input#editId(type="hidden", name="editId")
              div.form-group
                label(for="editType") Edit type:
                select#editType.form-control
                  option(value="jiraServer") Jira Server
                  option(value="jiraCloud") Jira Cloud
                  option(value="personalProject") Personal Project
                  option(value="masterThesis") Master Thesis
              div.form-group
                label(for="editName") Edit name:
                input#editName.form-control(type="text", name="editName")
              div.form-group
                label(for="editLink") Edit link:
                input#editLink.form-control(type="text", name="editLink")
              div.form-group
                input#editLogo.inputFile(type="file", name="editLogo")
                label(for="editLogo")
                  i.fas.fa-upload
                  span#editLogoName(style="margin-left: 5px") Choose a logo
            div.modal-footer
              button#closeEditPortfolioModalButton.btn.btn-secondary(type="button", data-dismiss="modal") Cancel
              button.btn.btn-primary(type="submit") Edit
