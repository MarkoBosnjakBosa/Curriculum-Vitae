doctype html
html
  head
    title Create resume
    meta(name="description", content="Curriculum Vitae")
    meta(name="author", content="Marko Bo≈°njak")
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href=url + "/images/fav/favicon.ico", rel="icon", type="image/x-icon")
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css")
    link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.10.2/css/all.css")
    link(rel="stylesheet", href="../../css/admin/createResume.css")
    script(src="https://code.jquery.com/jquery-3.4.1.js")
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js")
    script(src="../../handlers/admin/createResumeHandlers.js")
  body
    div#wrapper.d-flex
      div#sidebar-wrapper.bg-light.border-right
        div.sidebar-heading Administration
        div.list-group.list-group-flush
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/profile") Profile
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/resume") Resume
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/skills") Skills
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/portfolio") Portfolio
          a.list-group-item.list-group-item-action.bg-light(href=url + "/admin/contact") Contact
      div#page-content-wrapper
        nav.navbar.navbar-expand-lg.navbar-light.bg-light.border-bottom
          button#menu-toggle.btn.btn-secondary
            i.fas.fa-angle-double-left
          button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarSupportedContent", aria-controls="navbarSupportedContent", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          div#navbarSupportedContent.collapse.navbar-collapse
            ul.navbar-nav.ml-auto.mt-2.mt-lg-0
              li.nav-item.dropdown
                a#navbarDropdown.nav-link.active.dropdown-toggle(href="#", role="button", data-toggle="dropdown", aria-haspopup="true", aria-expanded="false") #{username}
                div.dropdown-menu.dropdown-menu-right(aria-labelledby="navbarDropdown")
                  a.dropdown-item.profileLink(href=url + "/admin/profile") Profile
                  a.dropdown-item.changePasswordLink(href=url + "/admin/change/password") Change password
                  a.dropdown-item.logOutLink(href="#") Log out
        div.container-fluid
          div#createResumeErrorMessage.alert.alert-danger.alert-dismissible.fade.show
            strong
            button#hideCreateResumeErrorMessage.close(type="button")
              span(aria-hidden="true") &times;
          div#createResumeSuccessMessage.alert.alert-success.alert-dismissible.fade.show
            strong
            button#hideCreateResumeSuccessMessage.close(type="button")
              span(aria-hidden="true") &times;
          div.createResumeTitle
            h1 Create resume:
          form#createResumeForm(method="POST", autocomplete="off")
            div.form-row
              div.form-group.col-md-6
                select#type.form-control
                  option(value="") Type
                  option(value="education") Education
                  option(value="experience") Experience
            div.form-row
              div.form-group.col-md-6
                label(for="title") Title:
                input#title.form-control(type="text", name="title")
              div.form-group.col-md-6
                label(for="title_de") Title DE:
                input#title_de.form-control(type="text", name="title_de")
            div.form-row
              div.form-group.col-md-6
                label(for="workPlace") Work place:
                input#workPlace.form-control(type="text", name="workPlace")
              div.form-group.col-md-6
                label(for="workPlace_de") Work place DE:
                input#workPlace_de.form-control(type="text", name="workPlace_de")
            div.form-row
              div.form-group.col-md-6
                label(for="duration") Duration:
                input#duration.form-control(type="text", name="duration")
              div.form-group.col-md-6
                label(for="duration_de") Duration DE:
                input#duration_de.form-control(type="text", name="duration_de")
            div.form-row
              div.form-group.col-md-6
                label(for="description") Description:
                input#description.form-control(type="text", name="description")
              div.form-group.col-md-6
                label(for="description_de") Description DE:
                input#description_de.form-control(type="text", name="description_de")
            div.form-row
              div.col-md-6(style="text-align: right")
                button.btn.btn-lg.btn-danger(type="reset") Reset
              div.col-md-6
                button.btn.btn-lg.btn-primary(type="submit") Submit
